{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cmaker",
  "version": "0.1.0",
  "identifier": "com.bansan.cmaker",
  "build": {
    "beforeDevCommand": "pnpm start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist/cmaker/browser",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "title": "cmaker",
        "width": 800,
        "height": 600,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
